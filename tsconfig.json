{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}